{
  "name": "Boostogy",
  "version": "2.0.0",
  "manifest_version": 2,
  "description": "Boostogy updates schoology to be more user friendly and intuitive!",
  "icons": {
    "16": "resources/icons/icon16.png",
    "48": "resources/icons/icon48.png",
    "128": "resources/icons/icon128.png"
  },
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "contextMenus",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://*.schoology.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://app.schoology.com/*",
        "*://schoology.dasd.org/*"
      ],
      "js": [
        "js/jquery/jquery.js",
        "js/jquery-ui/jquery-ui.js",
        "js/jquery-ui/jquery-bind-first.js",
        "js/rangy/rangy-core.js",
        "js/rangy/rangy-classapplier.js",
        "js/rangy/rangy-highlighter.js",
        "src/inject/inject.js"
      ],
      "css": [
        "resources/css/style.css"
      ]
    }
  ],
  "web_accessible_resources": [
    "resources/*",
    "src/inject/*",
    "src/inject/modules*"
  ]
}